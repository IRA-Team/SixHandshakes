<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="viewModel"
            type="com.irateam.sixhandshakes.viewmodel.MainActivityVM" />
    </data>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/main_activity_background">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/padding_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="vertical">

                <!-- Begin of self profile -->
                <ImageView
                    style="@style/PrimaryPhoto"
                    app:user="@{viewModel.self}" />

                <TextView
                    style="@style/NameSurname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:user="@{viewModel.self}"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <com.irateam.sixhandshakes.ui.LoadingStub
                        android:id="@+id/loading_stub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="@{viewModel.first == null}"
                        android:layout_marginTop="@dimen/margin_medium"/>

                    <ImageView
                        style="@style/Divider"
                        android:visibility="@{viewModel.first != null}" />

                </FrameLayout>
                <!-- End of self profile -->

                <!-- Begin of firth profile -->
                <ImageView
                    style="@style/SecondaryPhoto"
                    android:visibility="@{viewModel.first != null}"
                    app:user="@{viewModel.first}" />

                <TextView
                    style="@style/NameSurname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.first != null}"
                    app:user="@{viewModel.first}" />

                <ImageView
                    style="@style/Divider"
                    android:visibility="@{viewModel.first != null}" />
                <!-- End of first profile -->

                <!-- Begin of second profile -->
                <ImageView
                    style="@style/SecondaryPhoto"
                    android:visibility="@{viewModel.second != null}"
                    app:user="@{viewModel.second}" />

                <TextView
                    style="@style/NameSurname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.second != null}"
                    app:user="@{viewModel.second}" />

                <ImageView
                    style="@style/Divider"
                    android:visibility="@{viewModel.second != null}" />
                <!-- End of second profile -->

                <!-- Begin of third profile -->
                <ImageView
                    style="@style/SecondaryPhoto"
                    android:visibility="@{viewModel.third != null}"
                    app:user="@{viewModel.third}" />

                <TextView
                    style="@style/NameSurname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.third != null}"
                    app:user="@{viewModel.third}" />

                <ImageView
                    style="@style/Divider"
                    android:visibility="@{viewModel.third != null}" />
                <!-- End of third profile -->

                <!-- Begin of fourth profile -->
                <ImageView
                    style="@style/SecondaryPhoto"
                    android:visibility="@{viewModel.fourth != null}"
                    app:user="@{viewModel.fourth}" />

                <TextView
                    style="@style/NameSurname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{viewModel.fourth != null}"
                    app:user="@{viewModel.fourth}" />

                <ImageView
                    style="@style/Divider"
                    android:visibility="@{viewModel.fourth != null}" />
                <!-- End of fourth profile -->

                <!-- Begin of target profile -->
                <ImageView
                    style="@style/PrimaryPhoto"
                    app:onClick="@{viewModel.openSearch}"
                    app:user="@{viewModel.target}" />

                <TextView
                    style="@style/NameSurname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:user="@{viewModel.target}" />
                <!-- End of target profile -->

                <Button
                    style="@style/ButtonMainActivity.White"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/vk"
                    android:visibility="@{!viewModel.isLoggedIn}"
                    app:onClick="@{viewModel.openLoginActivity}"
                    android:layout_marginTop="@dimen/margin_medium"/>

                <Button
                    style="@style/ButtonMainActivity.Blue"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/github"
                    android:visibility="@{!viewModel.isLoggedIn}"
                    app:onClick="@{viewModel.openGitHubPage}" />

            </LinearLayout>
        </ScrollView>

        <android.support.design.widget.FloatingActionButton
            style="@style/AppTheme.FloatingActionButtonWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:src="@{viewModel.isProcessing ? @drawable/ic_fab_stop_blue_24dp : @drawable/ic_fab_play_blue_24dp}"
            android:visibility="@{viewModel.self != null &amp;&amp; viewModel.target != null}"
            app:onClick="@{viewModel.isProcessing ? (viewModel.isFinished ? viewModel.clear : viewModel.stopProcessing) : viewModel.startProcessing}" />

    </android.support.design.widget.CoordinatorLayout>

</layout>
